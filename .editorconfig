root = true

[*]
end_of_line = lf
charset = utf-8
indent_style = space
indent_size = 2
trim_trailing_whitespace = false
insert_final_newline = false

[*.md]
insert_final_newline = true

[*.tmpl]
indent_style = space
trim_trailing_whitespace = false

[*.{yml,js,sh,c,cpp,py,rb}]
trim_trailing_whitespace = true
insert_final_newline = true
